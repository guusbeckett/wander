<UserControl
    x:Class="Wander.Help"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Wander"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid x:Name="HelpGrid">
        <Rectangle Fill="#FFC31616" HorizontalAlignment="Left" Height="400" Margin="325,150,-725,-250" Stroke="Black" VerticalAlignment="Top" Width="800"/>
        <TextBox HorizontalAlignment="Left" Margin="346,162,-120,0" TextWrapping="Wrap" Text="Need help?" VerticalAlignment="Top" Height="54" Width="174" Background="#FFC31616" BorderBrush="#00E0402A" FontSize="25.667" Foreground="#FFFBF5F5" IsReadOnly="True"/>
        <TextBox ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Margin="346,219,-711,-228" TextWrapping="Wrap" Text="{Binding}" VerticalAlignment="Top" Background="#FFC31616" BorderBrush="#FFE0402A" Foreground="#FFF9F7F7" FontSize="20.667" Height="309" Width="765" IsReadOnly="True"/>
        <Button x:Name="CloseButton" Content="X" HorizontalAlignment="Left" Margin="1070,159,-714,0" VerticalAlignment="Top" Click="CloseButton_Click"/>

    </Grid>
</UserControl>
